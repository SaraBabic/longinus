{%
  set longinus_block = longinus_block ?: ('user-' ~ user.bundle ~ (view_mode != 'default' ? '-' ~ view_mode))|clean_class
%}
{%
  set classes = [
    longinus_block,
    user.isBlocked() ? longinus_block ~ '--blocked',
  ]
%}
<article{{ attributes.addClass(classes) }}>
  {% block content %}
    {% if content %}
      {{- content -}}
    {% endif %}
  {% endblock %}
</article>
